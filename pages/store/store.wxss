page {
  background-color: #f5f7fa;
}

.header-card {
  background: linear-gradient(135deg, #2c3e50, #4ca1af);
  padding: 40rpx;
  color: white;
  text-align: center;
  margin-bottom: 30rpx;
}

.points-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.points-val {
  font-size: 60rpx;
  font-weight: bold;
  color: #f1c40f;
  margin: 10rpx 0;
}

.tips {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}

.unequip-btn {
  margin-top: 20rpx;
  background: rgba(255,255,255,0.2);
  color: white;
  font-weight: normal;
  border: 1rpx solid rgba(255,255,255,0.3);
}

/* 网格布局 */
.goods-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 两列 */
  gap: 20rpx;
  padding: 20rpx;
}

.goods-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
}

.img-box {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.demo-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  opacity: 0.4; /* 让默认头像淡一点，突出相框 */
}

.frame-img {
  position: absolute;
  top: -10%; /* 稍微往外扩一点，效果更好 */
  left: -10%;
  width: 120%;
  height: 120%;
  z-index: 2; 
}

.info {
  text-align: center;
  margin-bottom: 20rpx;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.price {
  font-size: 26rpx;
  color: #e67e22;
  font-weight: bold;
}

/* 按钮样式 */
.btn {
  font-size: 24rpx;
  padding: 0 40rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
}

.btn.buy {
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(52, 152, 219, 0.3);
}

.btn.use {
  background: linear-gradient(135deg, #2ecc71, #27ae60);
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(46, 204, 113, 0.3);
}

.btn.using {
  background: #bdc3c7;
  color: white;
}