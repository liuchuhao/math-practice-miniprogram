/* pages/practice/practice.wxss */

.container {
  padding: 30rpx;
  /* 增加底部内边距，防止内容被底部的固定键盘遮挡，同时也允许滚动到底部 */
  padding-bottom: 350rpx; 
  min-height: 100vh;
  box-sizing: border-box; /* 确保padding不撑大屏幕 */
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

/* 头部样式 */
.header {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
}

.grade-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* --- 新增：排位赛徽章样式 --- */
.rank-badge {
  background: linear-gradient(90deg, #ffc107, #ff9800);
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 15rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(255, 152, 0, 0.3);
  vertical-align: middle;
  transform: translateY(-2rpx);
}

.grade-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  flex: 1; /* 让标题占据剩余空间 */
}

.time {
  font-size: 28rpx;
  color: #3498db;
  font-weight: 500;
  font-variant-numeric: tabular-nums; /* 防止数字变动导致宽度跳动 */
}

.progress-info {
  margin-top: 10rpx;
}

.progress {
  font-size: 28rpx;
  color: #7f8c8d;
  display: block;
  margin-bottom: 15rpx;
}

.progress-bar {
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

/* 快捷操作按钮 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 25rpx;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 70rpx; /* 稍微加高一点，方便点击 */
  font-size: 26rpx;
  background: #f8f9fa;
  border: 1rpx solid #e1e4e8;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  transition: all 0.2s;
}

.action-btn:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.keypad-btn {
  color: #3498db;
  background: #f0f7ff;
  border-color: #dbeafe;
}

.restart-btn {
  color: #e74c3c;
  background: #fff5f5;
  border-color: #ffe3e3;
}

/* 题目卡片 */
.question-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f8f9fa;
}

.question-label {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 600;
}

.difficulty {
  font-size: 24rpx;
  color: #e67e22;
  padding: 6rpx 20rpx;
  background: #fff3e0;
  border-radius: 20rpx;
}

.question-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  margin: 40rpx 0;
}

.question-text {
  font-size: 70rpx; /* 稍微调小一点，防止太长的题目换行 */
  font-weight: bold;
  color: #2c3e50;
  margin-right: 20rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.equals {
  font-size: 70rpx;
  font-weight: bold;
  color: #3498db;
  margin-right: 20rpx;
}

/* 输入框包装器 */
.answer-input-wrapper {
  position: relative;
  display: inline-block;
}

.answer-input {
  width: 260rpx;
  height: 100rpx;
  font-size: 60rpx;
  text-align: center;
  border: 4rpx solid #e0e6ed;
  border-radius: 16rpx;
  background: #f8fafc;
  font-family: 'Courier New', Courier, monospace;
  padding-right: 70rpx !important; /* 给清除按钮留位置 */
  color: #2c3e50;
  transition: border-color 0.3s;
}

.answer-input:focus {
  border-color: #3498db;
  background: #fff;
}

/* 隐藏系统自带的清除按钮 */
.answer-input::-webkit-clear-button,
.answer-input::-webkit-inner-spin-button,
.answer-input::-webkit-outer-spin-button {
  display: none !important;
}

/* 自定义清除按钮 */
.custom-clear-btn {
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #eef2f7;
  border-radius: 50%;
  z-index: 10;
  opacity: 0.8;
}

.custom-clear-btn:active {
  background: #dbeafe;
}

.clear-text-icon {
  font-size: 32rpx;
  color: #95a5a6;
  line-height: 1;
  margin-top: -4rpx; /* 微调垂直居中 */
}

/* --- 优化：计算器键盘 --- */
.calculator-keypad {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  
  background: #f0f2f5; /* 键盘背景色稍微深一点，区分内容 */
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx;
  box-sizing: border-box;
  
  /* 适配全面屏底部小黑条 */
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  
  box-shadow: 0 -10rpx 40rpx rgba(0,0,0,0.08);
  
  /* 进场动画 */
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.key-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.key {
  width: 22%;
  height: 100rpx; /* 加大按键高度 */
  background: white;
  border: none;
  border-radius: 16rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: #2c3e50;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 0 #dcdcdc; /* 按键立体感 */
  transition: all 0.1s;
}

.key:active {
  transform: translateY(4rpx);
  box-shadow: none;
  background: #f1f2f6;
}

.key.zero {
  width: 48%;
}

.key.del {
  background: #ff7675;
  color: white;
  box-shadow: 0 4rpx 0 #d63031;
}

.key.del:active {
  background: #fab1a0;
  box-shadow: none;
}

.key.clear {
  font-size: 32rpx;
  color: #e67e22;
}

.key.submit {
  width: 48%;
  background: #0984e3;
  color: white;
  font-size: 34rpx;
  box-shadow: 0 4rpx 0 #0056b3;
}

.key.submit:active {
  background: #74b9ff;
  box-shadow: none;
}


/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
}

.btn {
  width: 48%;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  gap: 10rpx;
  transition: transform 0.2s;
}

.btn::after { border: none; }

.btn:active {
  transform: scale(0.96);
}

.btn.skip {
  background: white;
  color: #95a5a6;
  border: 2rpx solid #ecf0f1;
}

.btn.submit {
  background: linear-gradient(135deg, #2ecc71, #27ae60);
  color: white;
  box-shadow: 0 10rpx 20rpx rgba(46, 204, 113, 0.3);
}

/* 得分板 */
.score-board {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
}

.score-item {
  text-align: center;
  flex: 1;
  position: relative;
}

/* 分隔线 */
.score-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 2rpx;
  background: #f0f0f0;
}

.score-label {
  display: block;
  font-size: 24rpx;
  color: #95a5a6;
  margin-bottom: 8rpx;
}

.score-value {
  display: block;
  font-size: 36rpx;
  font-weight: 800;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.score-value.correct { color: #2ecc71; }
.score-value.wrong { color: #e74c3c; }
.score-value.rate { color: #3498db; }

/* 历史记录 */
.history-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  padding-bottom: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f8f9fa;
}

.history-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2c3e50;
  border-left: 8rpx solid #3498db;
  padding-left: 15rpx;
}

.clear-history-btn {
  font-size: 24rpx;
  color: #95a5a6;
  background: #f8f9fa;
  border: none;
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.history-list {
  /* 允许历史记录在有限高度内滚动，防止页面过长 */
  max-height: 500rpx;
  overflow-y: auto;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx dashed #eee;
}

.history-item:last-child {
  border-bottom: none;
}

.history-question-section {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 8rpx;
}

.history-index {
  font-size: 24rpx;
  color: #bdc3c7;
  margin-right: 15rpx;
  width: 40rpx;
}

.history-question {
  font-size: 30rpx;
  color: #34495e;
  font-family: 'Courier New', Courier, monospace;
  font-weight: 500;
  margin-right: 15rpx;
}

.history-user-answer {
  font-size: 32rpx;
  font-weight: bold;
}

.history-user-answer.correct { color: #2ecc71; }
.history-user-answer.wrong { 
  color: #e74c3c; 
  text-decoration: line-through;
  margin-right: 15rpx;
}

.history-result {
  margin-left: 55rpx;
  margin-top: 5rpx;
  display: flex;
}

.correct-answer {
  font-size: 24rpx;
  color: #27ae60;
  background: #e8f8f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.history-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #bdc3c7;
  margin-left: 55rpx;
}

.skip-tag {
  font-size: 20rpx;
  color: #e67e22;
  background: #fff3e0;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

/* 提示信息 */
.hint-section {
  background: #e3f2fd;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 40rpx;
}

.hint-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1976d2;
  display: block;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.hint-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #455a64;
}