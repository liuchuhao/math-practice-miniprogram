@import '../common/common.wxss';

/* 提示栏 */
.hint-bar {
  text-align: center;
  padding: 20rpx;
  background: rgba(255,255,255,0.1);
  margin: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

/* 汉字网格 */
.hanzi-grid {
  display: grid;
  gap: 10rpx;
  padding: 20rpx;
  margin: 0 20rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 16rpx;
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-4 {
  grid-template-columns: repeat(4, 1fr);
}

.grid-5 {
  grid-template-columns: repeat(5, 1fr);
}

/* 汉字单元格 */
.hanzi-cell {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(145deg, #fff9e6 0%, #fff5d6 100%);
  border-radius: 10rpx;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.2);
  transition: all 0.2s;
}

.hanzi-cell:active {
  transform: scale(0.92);
}

.hanzi-cell.correct {
  background: linear-gradient(145deg, #a8ff78 0%, #78ffd6 100%);
}

.hanzi-cell.wrong {
  background: linear-gradient(145deg, #ff9a9e 0%, #fecfef 100%);
}

.hanzi-cell.highlight {
  background: linear-gradient(145deg, #ffd700 0%, #ffed4a 100%);
  box-shadow: 0 0 16rpx rgba(255,215,0,0.6);
}

.hanzi-char {
  font-size: 48rpx;
  color: #333;
}

.grid-5 .hanzi-char {
  font-size: 38rpx;
}