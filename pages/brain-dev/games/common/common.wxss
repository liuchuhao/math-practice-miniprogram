/**
 * 游戏公共样式
 * 使用方法：在各游戏wxss中 @import '../common/common.wxss';
 */

/* ============ 容器 ============ */
.game-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ============ 顶部状态栏 ============ */
.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: rgba(0, 0, 0, 0.2);
}

.header-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
}

.header-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 4rpx;
}

.header-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.header-value.large {
  font-size: 40rpx;
}

.timer-box {
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx 28rpx;
  border-radius: 30rpx;
  min-width: 120rpx;
  text-align: center;
}

.timer-box.warning {
  background: rgba(255, 80, 80, 0.5);
  animation: pulse 0.5s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* ============ 开始界面 ============ */
.start-screen {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.game-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.game-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.game-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-bottom: 20rpx;
}

.game-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 50rpx;
}

/* 难度选择 */
.diff-section {
  width: 100%;
  margin-bottom: 50rpx;
}

.diff-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  margin-bottom: 20rpx;
}

.diff-options {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.diff-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 36rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.diff-btn.active {
  background: rgba(255, 255, 255, 0.3);
  border-color: #fff;
  transform: scale(1.05);
}

.diff-btn .icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.diff-btn .name {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

/* 开始按钮 */
.start-btn {
  width: 360rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
}

.start-btn::after {
  border: none;
}

/* ============ 游戏区域 ============ */
.game-body {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.game-field {
  flex: 1;
  position: relative;
  margin: 20rpx;
  min-height: 400rpx;
}

/* ============ 选项面板 ============ */
.options-panel {
  background: rgba(255, 255, 255, 0.95);
  padding: 32rpx;
  border-radius: 32rpx 32rpx 0 0;
}

.options-title {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  margin-bottom: 24rpx;
}

.options-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.option-item {
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  transition: transform 0.2s;
}

.option-item:active {
  transform: scale(0.96);
}

.option-item.correct {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.option-item.wrong {
  background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
}

/* ============ 反馈提示Toast ============ */
.feedback-toast {
  position: fixed;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%) translateY(-20rpx);
  background: rgba(0, 0, 0, 0.8);
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  opacity: 0;
  transition: all 0.3s;
  z-index: 100;
}

.feedback-toast.show {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}

.toast-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.toast-text {
  font-size: 28rpx;
  color: #fff;
}

.feedback-toast.correct .toast-icon {
  color: #4CAF50;
}

.feedback-toast.wrong .toast-icon {
  color: #f44336;
}

/* ============ 结束界面 ============ */
.end-screen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  z-index: 200;
}

.end-card {
  width: 100%;
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx 36rpx;
  text-align: center;
}

.end-icon {
  font-size: 100rpx;
  margin-bottom: 16rpx;
}

.end-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

/* 积分展示 */
.score-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.score-row, .reward-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.score-row {
  margin-bottom: 12rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.score-label, .reward-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.score-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}

.reward-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffd700;
}

/* 统计数据 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-box {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx 12rpx;
}

.stat-num {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 评价 */
.rank-box {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.rank-emoji {
  font-size: 40rpx;
}

.rank-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
}

/* 按钮组 */
.btn-group {
  display: flex;
  gap: 16rpx;
}

.btn-retry, .btn-back {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.btn-retry {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-back {
  background: #eee;
  color: #666;
}

.btn-retry::after, .btn-back::after {
  border: none;
}