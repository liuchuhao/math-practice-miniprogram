@import '../common/common.wxss';

/* 数字桌面 */
.number-desk {
  background: linear-gradient(145deg, #8B4513 0%, #A0522D 50%, #8B4513 100%);
  border-radius: 20rpx;
  box-shadow: inset 0 4rpx 12rpx rgba(0,0,0,0.3), 0 8rpx 24rpx rgba(0,0,0,0.3);
}

.desk-surface {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  border: 2rpx solid rgba(255,255,255,0.1);
  border-radius: 15rpx;
}

/* 数字卡片 */
.number-card {
  position: absolute;
  min-width: 80rpx;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #fff9c4 0%, #fff59d 100%);
  border-radius: 12rpx;
  box-shadow: 3rpx 3rpx 8rpx rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.num-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}