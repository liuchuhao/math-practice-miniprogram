/* pages/brain-dev/menu/menu.wxss */

/* 沿用主页的容器和背景设置 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f4f7f6;
  box-sizing: border-box;
  position: relative;
}

/* 顶部背景 */
.top-bg-shape {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 420rpx; /* ✨ 修改：稍微加高一点，容纳新增的按钮 */
  background: linear-gradient(180deg, #e0f7fa 0%, #f4f7f6 90%, #f4f7f6 100%);
  z-index: 0;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
}

/* 头部容器 */
.page-header {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  align-items: center; /* 垂直居中 */
  margin-bottom: 50rpx;
  padding: 20rpx 10rpx; /* ✨ 修改：调整内边距 */
}

/* ✨ 新增：左侧包装容器 (包含标题和按钮) */
.header-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
}

.header-text { 
  display: flex; 
  flex-direction: column; 
  margin-bottom: 24rpx; /* ✨ 修改：给下方的按钮留出间距 */
}

.title { 
  font-size: 48rpx; 
  font-weight: 900; 
  color: #1a2a3a; 
  margin-bottom: 12rpx; 
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
}

.subtitle { 
  font-size: 26rpx; 
  color: #546e7a; 
  font-weight: 500;
}

/* ✨ 新增：查看榜单按钮样式 */
.rank-entry-btn {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.7);
  padding: 12rpx 28rpx;
  border-radius: 40rpx;
  border: 2rpx solid rgba(255,255,255,0.9);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
  backdrop-filter: blur(5px);
  transition: all 0.2s;
}

.rank-entry-btn:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.9);
}

.rank-entry-btn text {
  font-size: 26rpx;
  font-weight: bold;
  color: #2c3e50;
}

.rank-entry-btn .arrow {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #95a5a6;
  font-weight: normal;
}

/* 优化 Emoji 动画 */
.header-icon-emoji {
  font-size: 110rpx; 
  line-height: 1;
  filter: drop-shadow(0 10rpx 15rpx rgba(0,0,0,0.15));
  animation: floatEmoji 3s ease-in-out infinite;
  margin-left: 20rpx; /* ✨ 新增：与左侧保持距离 */
}

@keyframes floatEmoji {
  0% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-15rpx) rotate(5deg); } 
  100% { transform: translateY(0) rotate(0deg); }
}

/* 游戏网格布局 */
.game-grid {
  position: relative;
  z-index: 1;
  display: grid;
  grid-template-columns: repeat(2, 1fr); 
  gap: 30rpx;
  padding-bottom: 40rpx;
}

/* 游戏卡片基础样式 */
.game-card {
  height: 320rpx; 
  border-radius: 35rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 15rpx 30rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  transition: transform 0.1s;
}

.game-card:active { transform: scale(0.96); }

/* 卡片内容布局 */
.card-content {
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  z-index: 2;
}

.game-icon { font-size: 80rpx; margin-bottom: 20rpx; text-shadow: 0 5rpx 10rpx rgba(0,0,0,0.15); }

.game-info { display: flex; flex-direction: column; width: 100%; }
.game-name { font-size: 32rpx; font-weight: 800; color: #fff; margin-bottom: 8rpx; letter-spacing: 2rpx;}
.game-desc { font-size: 22rpx; color: rgba(255,255,255,0.9); margin-bottom: 15rpx; min-height: 60rpx; line-height: 1.4;}

/* 星级 */
.star-rating {
  background: rgba(0,0,0,0.15);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  align-self: center;
}
.label { font-size: 20rpx; color: rgba(255,255,255,0.8); margin-right: 6rpx; }
.stars { font-size: 20rpx; color: #ffd700; letter-spacing: 2rpx; }

/* 装饰性背景圆圈 */
.bg-circle { position: absolute; border-radius: 50%; background: rgba(255,255,255,0.1); z-index: 1; }
.c1 { width: 200rpx; height: 200rpx; top: -50rpx; right: -50rpx; }
.c2 { width: 100rpx; height: 100rpx; bottom: 20rpx; left: -20rpx; }

/* 播放按钮小图标 */
.play-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  background: rgba(255,255,255,0.2);
  width: 70rpx;
  height: 60rpx;
  border-top-left-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}
.play-btn text { font-size: 24rpx; color: #fff; }

/* 底部提示 */
.footer-tip { text-align: center; margin-top: 20rpx; font-size: 22rpx; color: #bdc3c7; }


/* ====== 配色方案 ====== */
.card-floating { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
.card-math { background: linear-gradient(135deg, #0ba360 0%, #3cba92 100%); } 
.card-code { background: linear-gradient(135deg, #434343 0%, #000000 100%); }
.card-code-alt { background: linear-gradient(135deg, #009efd 0%, #2af598 100%); } 
.card-avatar { background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%); }
.card-hanzi { background: linear-gradient(135deg, #ff0844 0%, #ffb199 100%); }
.card-animal { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }