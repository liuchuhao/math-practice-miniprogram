/* pages/index/index.wxss */

.container {
  padding: 40rpx;
  text-align: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header {
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.subtitle {
  font-size: 32rpx;
  color: #7f8c8d;
  display: block;
}

/* 图标样式 */
.logo {
  width: 300rpx;
  height: 300rpx;
  margin: 60rpx auto;
  background: white;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(52, 152, 219, 0.2);
  position: relative;
  overflow: hidden;
}

.logo::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(transparent, #3498db, transparent);
  animation: rotate 4s linear infinite;
}

@keyframes rotate {
  100% {
    transform: rotate(360deg);
  }
}

.logo-text {
  font-size: 120rpx;
  color: #3498db;
  font-weight: bold;
  font-family: 'Times New Roman', Times, serif;
  position: relative;
  z-index: 1;
}

.btn-group {
  margin-top: 80rpx;
  width: 100%;
}

.btn {
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
  margin: 30rpx auto;
  width: 80%;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn::after {
  border: none;
}

.btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 10rpx rgba(52, 152, 219, 0.3);
  opacity: 0.9;
}

/* 为不同按钮添加不同颜色 */
.btn:nth-child(2) {
  background: linear-gradient(135deg, #2ecc71, #27ae60);
  box-shadow: 0 6rpx 20rpx rgba(46, 204, 113, 0.3);
}

.btn:nth-child(3) {
  background: linear-gradient(135deg, #f39c12, #e67e22);
  box-shadow: 0 6rpx 20rpx rgba(243, 156, 18, 0.3);
}

.btn:nth-child(4) {
  background: linear-gradient(135deg, #9b59b6, #8e44ad);
  box-shadow: 0 6rpx 20rpx rgba(155, 89, 182, 0.3);
}

.footer {
  margin-top: 100rpx;
  padding: 20rpx;
  opacity: 0.7;
}

.footer-text {
  font-size: 24rpx;
  color: #7f8c8d;
  font-style: italic;
}