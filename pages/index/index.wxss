/* pages/index/index.wxss */

/* 全局容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f4f7f6; /* 浅灰背景 */
  box-sizing: border-box;
  position: relative;
  overflow-x: hidden;
}

/* 顶部背景装饰 */
.top-bg-shape {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 450rpx; 
  background: linear-gradient(180deg, #e3f2fd 0%, #f4f7f6 100%);
  z-index: 0;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
}

/* 1. 头部区域 */
.page-header {
  position: relative;
  z-index: 1; 
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.header-left { display: flex; flex-direction: column; }
.app-greeting { font-size: 28rpx; color: #7f8c8d; margin-bottom: 6rpx; }
.app-name { font-size: 40rpx; font-weight: 800; color: #2c3e50; }

.wechat-badge {
  background: rgba(255, 255, 255, 0.8);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  color: #3498db;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

/* 2. 用户名片卡 */
.user-card {
  position: relative;
  z-index: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  margin-bottom: 50rpx;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.06); 
}

.user-card-inner {
  display: flex;
  align-items: center;
  padding: 40rpx;
  gap: 30rpx;
}

.avatar-wrap { position: relative; width: 130rpx; height: 130rpx; flex-shrink: 0; }
.avatar-btn { padding: 0 !important; margin: 0 !important; background: none !important; width: 100% !important; height: 100% !important; border-radius: 50%; }
.avatar-btn::after { border: none; }
.avatar-img { width: 100%; height: 100%; border-radius: 50%; border: 6rpx solid white; box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.1); background-color: #eee; }
.frame-overlay { position: absolute; top: -16%; left: -16%; width: 132%; height: 132%; z-index: 10; pointer-events: none; }
.info-box { flex: 1; display: flex; flex-direction: column; justify-content: center; }
.nickname-row { display: flex; align-items: center; border-bottom: 1rpx dashed #eee; padding-bottom: 10rpx; margin-bottom: 12rpx; }
.nickname-input { font-size: 34rpx; font-weight: bold; color: #2c3e50; width: 100%; }
.edit-icon { font-size: 24rpx; color: #bdc3c7; margin-left: 10rpx; }
.rank-badge-area { display: flex; flex-direction: column; }
.rank-pill { background: linear-gradient(90deg, #2c3e50, #34495e); color: #fff; font-size: 22rpx; padding: 6rpx 16rpx; border-radius: 10rpx; display: inline-flex; align-items: center; margin-bottom: 8rpx; align-self: flex-start; }
.rank-text { font-weight: bold; margin-left: 6rpx; }
.integral-row { font-size: 24rpx; color: #7f8c8d; }
.integral-val { color: #e67e22; font-weight: bold; font-size: 28rpx; margin: 0 6rpx; }


/* ==========================================
   3. 核心功能区 
   ========================================== */
.main-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 依然保持双列布局，6个卡片会自动排成3行 */
  gap: 30rpx; 
  margin-bottom: 40rpx;
  margin-top: 20rpx; 
}

.action-card {
  height: 220rpx; 
  border-radius: 35rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 15rpx 30rpx rgba(0,0,0,0.1); 
  transition: transform 0.1s;
}

.action-card:active { transform: scale(0.96); }

.card-inner {
  height: 100%;
  display: flex;
  flex-direction: row; 
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0 20rpx;
}

.icon { 
  font-size: 80rpx; 
  margin-right: 15rpx;
  text-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.text { 
  display: flex; 
  flex-direction: column; 
  align-items: flex-start; 
}

.title { 
  font-size: 36rpx; 
  font-weight: 900; 
  color: #fff; 
  letter-spacing: 2rpx;
  margin-bottom: 6rpx;
}

.desc { 
  font-size: 24rpx; 
  color: rgba(255,255,255,0.95); 
  font-weight: 500;
}

/* 卡片颜色定义 */
.blue   { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
.purple { background: linear-gradient(135deg, #b721ff 0%, #21d4fd 100%); }
.green  { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
.orange { background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); }

.pink { 
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%);
  box-shadow: 0 8rpx 20rpx rgba(255, 154, 158, 0.4);
}

/* [新增] 青色系 - 大脑开发 */
/* 选择了非常有科技感和智慧感的 "极光青 -> 皇家蓝" 渐变 */
.cyan {
  background: linear-gradient(135deg, #17ead9 0%, #6078ea 100%);
  box-shadow: 0 8rpx 20rpx rgba(23, 234, 217, 0.4);
}

/* ==========================================
   4. 常用工具
   ========================================== */
.tools-section {
  background: white;
  border-radius: 35rpx;
  padding: 50rpx 20rpx; 
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06);
  margin-bottom: 50rpx;
}

.sub-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
}

.sub-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 160rpx; 
  border-radius: 20rpx;
}

.sub-btn:active { 
  background-color: #f9f9f9;
  transform: scale(0.95); 
}

.sub-icon { 
  font-size: 72rpx; 
  margin-bottom: 20rpx; 
}

.sub-btn text:last-child { 
  font-size: 28rpx; 
  color: #555; 
  font-weight: 600;
}

/* 底部 */
.footer { margin-top: auto; padding-bottom: 20rpx; text-align: center; }
.footer-text { font-size: 22rpx; color: #bdc3c7; }