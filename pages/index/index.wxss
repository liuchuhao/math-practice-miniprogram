/* pages/index/index.wxss */

/* 1. 容器：保留你原来的漂亮渐变背景 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 2. 头部文字 */
.header {
  text-align: center;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 44rpx; /* 稍微调小一点适配小屏 */
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
}

/* 3. Logo区：完美保留你的旋转动画 */
.logo-area {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.logo {
  /* 为了给用户卡片腾位置，稍微缩小尺寸 300->220 */
  width: 220rpx;
  height: 220rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(52, 152, 219, 0.2);
  position: relative;
  overflow: hidden;
}

/* 你的旋转特效代码 */
.logo::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(transparent, #3498db, transparent);
  animation: rotate 4s linear infinite;
}

@keyframes rotate {
  100% { transform: rotate(360deg); }
}

/* Logo文字，层级提高防止被动画遮挡 */
.logo-text {
  font-size: 100rpx;
  color: #3498db;
  font-weight: bold;
  font-family: 'Times New Roman', Times, serif;
  position: relative;
  z-index: 10;
  background: white; /* 遮住中间的旋转线 */
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 200rpx;
}

/* 4. 新增：用户资料卡 (磨砂玻璃风格) */
.user-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: center;
}

.user-card-inner {
  display: flex;
  align-items: center;
  width: 100%;
  gap: 30rpx;
}

.avatar-btn {
  padding: 0;
  background: none;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin: 0;
  position: relative;
}
.avatar-btn::after { border: none; }

.avatar-img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  box-shadow: 0 5rpx 10rpx rgba(0,0,0,0.1);
  background-color: #eee;
}

.edit-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  background: #2ecc71;
  color: white;
  font-size: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
}

.nickname-box {
  flex: 1;
}

.nickname-input {
  font-size: 34rpx;
  font-weight: bold;
  color: #2c3e50;
  height: 60rpx;
  border-bottom: 2rpx dashed #bdc3c7;
  margin-bottom: 8rpx;
}

.nickname-tip {
  font-size: 22rpx;
  color: #95a5a6;
}

/* 5. 核心功能区 (大卡片) - 继承你喜欢的渐变色 */
.main-actions {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.action-card {
  height: 160rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  color: white;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.15);
  transition: transform 0.2s;
}

.action-card:active {
  transform: scale(0.98);
}

/* 蓝色渐变 - 对应原本的“开始练习” */
.action-card.blue {
  background: linear-gradient(135deg, #3498db, #2980b9);
  box-shadow: 0 8rpx 20rpx rgba(52, 152, 219, 0.4);
}

/* 橙色渐变 - 对应原本的“排行榜” (推荐用醒目颜色) */
.action-card.orange {
  background: linear-gradient(135deg, #f39c12, #d35400);
  box-shadow: 0 8rpx 20rpx rgba(243, 156, 18, 0.4);
}

/* 装饰圆圈，增加层次感 */
.action-card::after {
  content: '';
  position: absolute;
  right: -30rpx;
  bottom: -50rpx;
  width: 180rpx;
  height: 180rpx;
  background: rgba(255,255,255,0.15);
  border-radius: 50%;
}

.icon-box {
  font-size: 60rpx;
  margin-right: 30rpx;
  width: 80rpx;
  text-align: center;
}

.text-box {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
}

.card-desc {
  font-size: 24rpx;
  opacity: 0.9;
  margin-top: 5rpx;
}

/* 6. 更多功能区 (网格小按钮) */
.sub-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 25rpx;
  margin-bottom: 40rpx;
}

.sub-btn {
  background: white;
  border-radius: 20rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #555;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}

.sub-btn:active {
  background: #f8f9fa;
  transform: translateY(2rpx);
}

.sub-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

/* 底部 */
.footer {
  margin-top: auto;
  opacity: 0.7;
  padding-bottom: 20rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #7f8c8d;
  font-style: italic;
}