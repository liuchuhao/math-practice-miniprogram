.container {
  padding: 40rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #7f8c8d;
}

.logo {
  width: 300rpx;
  height: 300rpx;
  margin: 60rpx auto;
}

.btn-group {
  margin-top: 80rpx;
}

.btn {
  background-color: #3498db;
  color: white;
  margin: 30rpx auto;
  width: 80%;
  border-radius: 50rpx;
  font-size: 32rpx;
}

.btn:active {
  background-color: #2980b9;
}