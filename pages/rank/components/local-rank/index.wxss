/* pages/rank/local-rank/index.wxss    */
.local-rank {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 二级Tab */
.sub-tabs {
  display: flex;
  background: #fff;
  padding: 16rpx 24rpx;
  gap: 16rpx;
  flex-shrink: 0;
}

.sub-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0;
  background: #f5f6f8;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.sub-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.sub-icon { font-size: 28rpx; }
.sub-name { font-size: 26rpx; color: #666; }
.sub-tab.active .sub-name { color: #fff; font-weight: bold; }

/* 加载中 */
.loading-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #eee;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 滚动区 */
.local-scroll {
  flex: 1;
  background: #f5f6f8;
  height: 0;     
  width: 100%;
  min-height: 0;
}

.panel {
  padding: 24rpx;
}

/* 个人卡片 */
.profile-card {
  display: flex;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.profile-left {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.5);
}

.badge {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #f5af19 0%, #f12711 100%);
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  white-space: nowrap;
}

.profile-right { flex: 1; }
.nickname { font-size: 32rpx; font-weight: bold; color: #fff; margin-bottom: 16rpx; }
.stats { display: flex; gap: 24rpx; }
.stat { display: flex; flex-direction: column; align-items: center; }
.stat .num { font-size: 32rpx; font-weight: bold; color: #fff; }
.stat .txt { font-size: 20rpx; color: rgba(255,255,255,0.8); }

/* 区块 */
.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.badges {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
}

.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  background: linear-gradient(180deg, #fffbeb 0%, #fef3c7 100%);
  border-radius: 12rpx;
  border: 2rpx solid #fcd34d;
}

.badge-item.locked {
  background: #f5f5f5;
  border-color: #e5e5e5;
  opacity: 0.5;
}

.b-icon { font-size: 32rpx; margin-bottom: 6rpx; }
.b-name { font-size: 18rpx; color: #92400e; text-align: center; }
.badge-item.locked .b-name { color: #999; }

/* 游戏列表 */
.game-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.game-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.game-head {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 20rpx;
}

.game-head.blue { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
.game-head.red { background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%); }
.game-head.orange { background: linear-gradient(135deg, #f5af19 0%, #f12711 100%); }
.game-head.purple { background: linear-gradient(135deg, #a855f7 0%, #6366f1 100%); }
.game-head.green { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); }
.game-head.cyan { background: linear-gradient(135deg, #00d9ff 0%, #00b4d8 100%); }
.game-head.indigo { background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%); }
.game-head.pink { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
.game-head.teal { background: linear-gradient(135deg, #0d9488 0%, #14b8a6 100%); }

.g-icon { font-size: 26rpx; }
.g-name { font-size: 26rpx; font-weight: bold; color: #fff; }

.game-records { padding: 12rpx 20rpx; }
.rec {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 24rpx;
  color: #666;
}
.rec:last-child { border-bottom: none; }
.rec .val { font-weight: bold; color: #333; }

/* 大脑头部 */
.brain-header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.bh-icon { font-size: 48rpx; margin-right: 16rpx; }
.bh-info { display: flex; flex-direction: column; }
.bh-title { font-size: 32rpx; font-weight: bold; color: #fff; }
.bh-desc { font-size: 24rpx; color: rgba(255,255,255,0.9); }

.footer-tip {
  text-align: center;
  font-size: 22rpx;
  color: #bbb;
  padding: 30rpx 0 50rpx;
}