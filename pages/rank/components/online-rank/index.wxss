/* pages/rank/online-rank/index.wxss    */
.online-rank {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f5f6f8;
  overflow: hidden;
}

/* 筛选区 */
.filter-area {
  background: #fff;
  flex-shrink: 0;
}

.type-switch {
  display: flex;
  padding: 20rpx 24rpx 16rpx;
  gap: 16rpx;
}

.type-btn {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  font-size: 28rpx;
  color: #666;
  background: #f5f6f8;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.type-btn.active {
  color: #fff;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.mode-tabs {
  display: flex;
  padding: 0 24rpx 16rpx;
  gap: 16rpx;
}

.mode-btn {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  font-size: 26rpx;
  color: #888;
  background: #f0f0f0;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.mode-btn.active {
  color: #fff;
  background: linear-gradient(135deg, #f5af19 0%, #f12711 100%);
}

.grade-tabs {
  display: flex;
  padding: 0 24rpx 16rpx;
  gap: 10rpx;
}

.grade-btn {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #666;
  background: #f5f6f8;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.grade-btn.active {
  color: #fff;
  font-weight: bold;
  background: #667eea;
}

/* 提示条 */
.tips-bar {
  padding: 14rpx 24rpx;
  font-size: 22rpx;
  color: #f59e0b;
  background: #fffbeb;
  text-align: center;
  flex-shrink: 0;
}

/* 表头 */
.list-header {
  display: flex;
  padding: 14rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.list-header .col {
  font-size: 24rpx;
  color: #999;
}

.col-rank { width: 80rpx; text-align: center; }
.col-user { flex: 1; }
.col-score { width: 110rpx; text-align: center; }
.col-time { width: 90rpx; text-align: center; }

/* 滚动区域 - 关键 */
.rank-scroll {
  flex: 1;
  height: 0;       /* ✨ 必须加这句！强制它只占剩余空间，不被内容撑开 */
  width: 100%;     /* 确保宽度占满 */
  min-height: 0;
}

/* 状态盒子 */
.state-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #eee;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.state-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.state-sub {
  font-size: 24rpx;
  color: #999;
}

/* 错误状态 */
.state-box.error {
  padding: 80rpx 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  white-space: pre-line;
  margin-bottom: 30rpx;
}

.retry-btn {
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 30rpx;
}

/* 空状态 */
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

/* 列表 */
.rank-list {
  background: #fff;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 18rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.rank-item.top {
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
}

.medal {
  font-size: 36rpx;
}

.rank-num {
  font-size: 28rpx;
  font-weight: bold;
  color: #888;
  width: 80rpx;
  text-align: center;
}

.col-user {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #eee;
  flex-shrink: 0;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  max-width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-item.top .user-name {
  font-weight: bold;
}

.score-num {
  font-size: 30rpx;
  font-weight: bold;
  color: #667eea;
}

.score-unit {
  font-size: 20rpx;
  color: #999;
  margin-left: 4rpx;
}

.col-time {
  font-size: 26rpx;
  color: #888;
}

.list-footer {
  height: 30rpx;
}

/* 底部按钮 */
.footer-bar {
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  flex-shrink: 0;
}

.challenge-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  border: none;
}

.challenge-btn::after {
  border: none;
}
.math-level-tabs {
  display: flex;
  padding: 0 24rpx 16rpx;
  gap: 16rpx;
}
/* 新增：大脑游戏横向滚动栏 */
.brain-tabs {
  white-space: nowrap;
  padding: 0 24rpx 16rpx;
  display: flex;
  height: 80rpx;
  flex-shrink: 0;
  box-sizing: border-box; /* 确保 padding 不撑大高度 */
}

.brain-tab {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 16rpx;
  background: #f5f6f8;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx solid transparent;
  transition: all 0.3s;
}

.brain-tab.active {
  color: #fff;
  background: #667eea;
  border-color: #667eea;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(102, 126, 234, 0.3);
}
/* 难度标签 */
.diff-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background: #eee;
  color: #666;
}
.diff-tag.easy { background: #e6fffa; color: #38b2ac; } /* 浅绿 */
.diff-tag.medium { background: #ebf8ff; color: #3182ce; } /* 浅蓝 */
.diff-tag.hard { background: #fff5f5; color: #e53e3e; } /* 浅红 */