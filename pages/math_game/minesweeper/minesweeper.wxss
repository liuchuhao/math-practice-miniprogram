.container {
  min-height: 100vh;
  background: #2c3e50; /* 深色背景，更沉浸 */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}

/* 顶部仪表盘 */
.header {
  width: 90%;
  background: #34495e;
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.2);
  box-sizing: border-box;
}

.counter-box, .timer-box {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.val {
  font-family: 'Courier New', Courier, monospace;
  font-size: 40rpx;
  color: #ecf0f1;
  font-weight: bold;
}

.face-btn {
  font-size: 60rpx;
  background: #ecf0f1;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 5rpx 0 #bdc3c7;
}
.face-btn:active { transform: translateY(4rpx); box-shadow: none; }

/* 棋盘外壳 */
.board-wrap {
  background: #95a5a6;
  padding: 10rpx;
  border-radius: 10rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.3);
}

.grid-board {
  display: grid;
  gap: 2rpx;
  background: #7f8c8d; /* 格子缝隙颜色 */
}

/* 核心格子样式 */
.cell {
  aspect-ratio: 1; /* 正方形 */
  width: 80rpx;    /* 适配屏幕宽度 */
  background: #bdc3c7; /* 未翻开颜色 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  position: relative;
  /* 未翻开时的立体效果 */
  box-shadow: inset 4rpx 4rpx 0 rgba(255,255,255,0.4), inset -4rpx -4rpx 0 rgba(0,0,0,0.1);
}

/* 按下或翻开后的样式 */
.cell.status-1 {
  background: #ecf0f1; /* 翻开后颜色 */
  box-shadow: none;
  border: 1rpx solid #e0e0e0;
}

/* 爆炸的雷 */
.cell.boom {
  background: #e74c3c !important;
}

/* 数字颜色 (经典扫雷配色) */
.num-1 { color: #3498db; }
.num-2 { color: #2ecc71; }
.num-3 { color: #e74c3c; }
.num-4 { color: #9b59b6; }
.num-5 { color: #f1c40f; }
.num-6 { color: #1abc9c; }
.num-7 { color: #34495e; }
.num-8 { color: #7f8c8d; }

/* 提示区 */
.tips {
  margin-top: 60rpx;
  display: flex;
  gap: 40rpx;
}
.tip-item {
  color: rgba(255,255,255,0.6);
  font-size: 24rpx;
}
.tip-item text {
  font-weight: bold;
  color: #fff;
  margin-right: 10rpx;
}