.container {
  min-height: 100vh;
  background: #fdf6e3; /* 暖色背景 */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}

/* 顶部 */
.header {
  width: 85%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}

.stat-box {
  background: #fff;
  padding: 15rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 150rpx;
}

.label { font-size: 24rpx; color: #95a5a6; }
.val { font-size: 40rpx; font-weight: bold; color: #d35400; font-family: monospace; }

/* 棋盘外壳 */
.board-wrap {
  background: #8d6e63; /* 木质边框色 */
  padding: 15rpx;
  border-radius: 20rpx;
  box-shadow: 0 15rpx 30rpx rgba(0,0,0,0.2);
}

.grid-board {
  display: grid;
  gap: 10rpx;
  background: #6d4c41; /* 格子缝隙色 */
  padding: 10rpx;
  border-radius: 10rpx;
}

/* 滑块样式 */
.block {
  aspect-ratio: 1;
  background: #ffcc80; /* 木块颜色 */
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  font-weight: bold;
  color: #5d4037;
  
  /* 立体效果 */
  box-shadow: inset 0 0 10rpx rgba(255,255,255,0.5), 0 5rpx 0 #ef6c00;
  transition: all 0.1s;
}

.block:active {
  transform: translateY(4rpx);
  box-shadow: inset 0 0 10rpx rgba(0,0,0,0.1);
}

/* 空格样式 */
.block.empty {
  background: transparent;
  box-shadow: none;
  pointer-events: none; /* 空格不可点 */
}

/* 胜利后的样式 */
.block.win {
  background: #a5d6a7;
  color: #1b5e20;
  box-shadow: 0 5rpx 0 #2e7d32;
}

/* 适配不同尺寸字体 */
.block.size-3 { font-size: 70rpx; width: 180rpx; }
.block.size-4 { font-size: 50rpx; width: 130rpx; }
.block.size-5 { font-size: 40rpx; width: 100rpx; }

/* 底部按钮 */
.controls { margin-top: 60rpx; width: 60%; }
.btn.restart {
  background: #ef6c00; 
  color: white; 
  border-radius: 40rpx; 
  font-weight: bold;
  box-shadow: 0 6rpx 0 #e65100;
}
.btn.restart:active { transform: translateY(4rpx); box-shadow: none; }

.tips {
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #8d6e63;
}