.container {
  min-height: 100vh;
  background: #2e7d32;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  box-sizing: border-box;
}

/* 顶部 */
.header {
  width: 90%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  margin-bottom: 40rpx;
  background: rgba(0,0,0,0.2);
  padding: 15rpx 30rpx;
  border-radius: 40rpx;
}
.score-box { display: flex; flex-direction: column; align-items: center; }
.label { font-size: 22rpx; opacity: 0.8; }
.val { font-size: 36rpx; font-weight: bold; font-family: monospace; }
.btn-box { font-size: 28rpx; padding: 10rpx 20rpx; background: rgba(255,255,255,0.2); border-radius: 20rpx; }
.btn-box:active { background: rgba(255,255,255,0.4); }

/* 牌桌 */
.table-area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 30rpx;
  width: 90%;
}

.poker-card {
  width: 180rpx;
  height: 260rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 15rpx;
  position: relative;
  transition: all 0.2s;
}

.poker-card.selected {
  transform: translateY(-20rpx);
  box-shadow: 0 0 0 6rpx #ffd700, 0 20rpx 40rpx rgba(0,0,0,0.4);
}

.suit { font-size: 30rpx; color: #e74c3c; }
.suit.bottom { transform: rotate(180deg); align-self: flex-end; color: #2c3e50; }

.card-val {
  font-size: 80rpx;
  font-weight: bold;
  color: #2c3e50;
  text-align: center;
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
}
.card-val.small { font-size: 50rpx; } 

.card-expr {
  position: absolute;
  bottom: 45rpx; width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #7f8c8d;
  font-family: monospace;
}

.target-tips {
  margin-top: 60rpx;
  color: rgba(255,255,255,0.6);
  font-size: 30rpx;
  letter-spacing: 4rpx;
}

/* 操作面板 */
.control-panel {
  width: 100%;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom); /* 适配全面屏底部 */
}

.ops-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.op-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f0f2f5;
  color: #2c3e50;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 0 #bdc3c7;
  transition: all 0.1s;
}
.op-btn:active { transform: translateY(6rpx); box-shadow: none; }
.op-btn.active { background: #3498db; color: white; box-shadow: 0 8rpx 0 #2980b9; }

.func-row {
  display: flex;
  gap: 20rpx;
}

.func-btn {
  flex: 1;
  background: #fff3e0;
  color: #e65100;
  border-radius: 20rpx;
  font-weight: bold;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
}
.func-btn:active { opacity: 0.8; }

.func-btn.undo { background: #e3f2fd; color: #1565c0; }
.func-btn.hint { background: #fff9c4; color: #fbc02d; } /* 黄色提示按钮 */
.func-btn.reset { background: #ffebee; color: #c62828; }