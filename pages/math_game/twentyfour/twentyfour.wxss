/* pages/math_game/twentyfour/twentyfour.wxss */

.container {
  min-height: 100vh;
  background: #2e7d32; /* 经典绿色牌桌 */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  box-sizing: border-box;
}

/* --- 1. 顶部栏优化 --- */
.header {
  width: 92%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  margin-bottom: 20rpx;
  background: rgba(0,0,0,0.25); /* 加深一点背景提高对比度 */
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
}

/* 左侧数据组 */
.stats-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.score-box { 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
}

.label { 
  font-size: 20rpx; 
  opacity: 0.8; 
  margin-bottom: 2rpx;
}

.val { 
  font-size: 34rpx; 
  font-weight: bold; 
  font-family: monospace; 
  line-height: 1;
}

/* 分割线 */
.divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(255,255,255,0.3);
}

/* 时间 */
.timer-box {
  flex: 1;
  text-align: center;
}
.time-text {
  font-size: 38rpx;
  font-weight: bold;
  font-family: monospace;
  letter-spacing: 2rpx;
}

/* 按钮 */
.btn-box { 
  font-size: 26rpx; 
  padding: 12rpx 24rpx; 
  background: rgba(255,255,255,0.2); 
  border-radius: 30rpx; 
  border: 1rpx solid rgba(255,255,255,0.3);
}
.btn-hover { background: rgba(255,255,255,0.4); }

/* --- 2. 牌桌区域优化 --- */
.table-area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.card-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 30rpx; /* 增加间距 */
  width: 94%;
}

/* 扑克牌样式 */
.poker-card {
  width: 170rpx;
  height: 250rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.2);
  position: relative;
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  border: 4rpx solid white; /* 选中时边框变色，不改变大小 */
}

/* 选中状态 */
.poker-card.selected {
  transform: translateY(-20rpx);
  border-color: #ffd700; /* 金色边框 */
  box-shadow: 0 0 10rpx #ffd700, 0 20rpx 30rpx rgba(0,0,0,0.3);
  z-index: 10;
}

/* 角标 (数字+花色) */
.corner {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  line-height: 1.1;
  font-weight: bold;
}

.suit-icon {
  font-size: 24rpx;
}

/* 左上角 */
.top-left {
  top: 10rpx;
  left: 10rpx;
}

/* 右下角 (旋转180度) */
.bottom-right {
  bottom: 10rpx;
  right: 10rpx;
  transform: rotate(180deg);
}

/* 中间内容 */
.card-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.main-num {
  font-size: 72rpx;
  font-weight: bold;
  color: #2c3e50;
  line-height: 1;
}

/* 如果数字太大(>100)，字体变小 */
.main-num.small-font {
  font-size: 50rpx;
}

.sub-expr {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #7f8c8d;
  background: #f0f2f5;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  max-width: 80%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.target-tips {
  margin-top: 50rpx;
  color: rgba(255,255,255,0.8);
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  height: 40rpx; /* 占位防止跳动 */
}

/* --- 3. 操作面板优化 --- */
.control-panel {
  width: 100%;
  background: #f8f9fa; /* 浅灰白背景，不刺眼 */
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  box-sizing: border-box;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.1);
}

.ops-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.op-btn {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #ffffff;
  color: #2c3e50;
  font-size: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 0 #bdc3c7, 0 6rpx 10rpx rgba(0,0,0,0.1);
  transition: all 0.1s;
  font-weight: bold;
}

.op-btn:active { 
  transform: translateY(6rpx); 
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.1); 
}

.op-btn.active { 
  background: #3498db; 
  color: white; 
  box-shadow: 0 6rpx 0 #2980b9, 0 6rpx 10rpx rgba(52, 152, 219, 0.4); 
}

.func-row {
  display: flex;
  gap: 24rpx;
}

.func-btn {
  flex: 1;
  border-radius: 20rpx;
  font-weight: bold;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border: none;
  box-shadow: 0 4rpx 0 rgba(0,0,0,0.1);
  margin: 0; /* 消除 button 默认 margin */
}

.func-btn::after { border: none; } /* 去除小程序button边框 */

.func-btn:active { 
  transform: translateY(4rpx); 
  box-shadow: none;
  opacity: 0.9;
}

/* 颜色保持你原来的喜好 */
.func-btn.undo { background: #e3f2fd; color: #1565c0; }
.func-btn.hint { background: #fff9c4; color: #f9a825; } /* 黄色提示 */
.func-btn.reset { background: #ffebee; color: #c62828; }