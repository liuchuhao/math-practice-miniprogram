.container {
  height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  box-sizing: border-box;
}

/* 状态栏 */
.header {
  display: flex;
  width: 90%;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  padding: 15rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  min-width: 100rpx;
}
.label { font-size: 22rpx; color: #95a5a6; }
.val { font-size: 32rpx; font-weight: bold; color: #2c3e50; }
.val.danger { color: #e74c3c; }

/* 棋盘外壳 */
.board-wrap {
  background: #2c3e50; /* 边框色 */
  padding: 6rpx;
  border-radius: 8rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.15);
}

/* 9x9 Grid */
.sudoku-board {
  display: grid;
  grid-template-columns: repeat(9, 76rpx); /* 格子大小 */
  grid-template-rows: repeat(9, 76rpx);
  gap: 2rpx; /* 细线 */
  background: #2c3e50; 
}

/* 格子样式 */
.cell {
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #3498db; /* 填写的数字颜色 */
  font-weight: bold;
}

/* 宫格粗线处理 (每3列/3行加宽间距) */
.cell.c2, .cell.c5 { margin-right: 4rpx; }
.cell.r2, .cell.r5 { margin-bottom: 4rpx; }

/* 状态样式 */
.cell.fixed { color: #2c3e50; background: #f1f2f6; } /* 题目自带 */
.cell.related { background: #e3f2fd; } /* 同行同列高亮 */
.cell.selected { background: #3498db !important; color: white !important; } /* 选中 */
.cell.error { color: #e74c3c; background: #fadbd8; } /* 错误 */

/* 键盘区 */
.keypad {
  width: 100%;
  margin-top: auto;
  padding: 30rpx;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  box-shadow: 0 -5rpx 20rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
}

.num-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.num-btn {
  width: 10%; /* 稍微小一点，一行排9个 */
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  font-size: 40rpx;
  color: #3498db;
  background: #f0f7ff;
  border: 1rpx solid #dbeafe;
  border-radius: 12rpx;
}
.num-btn:active { background: #3498db; color: white; }

.tool-row {
  display: flex;
  justify-content: space-around;
}
.tool-btn {
  width: 40%;
  background: #f8f9fa;
  color: #555;
}
.tool-btn.delete { color: #e74c3c; }