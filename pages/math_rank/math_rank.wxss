/* pages/math_rank/math_rank.wxss */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* --- 1. 顶部区域 --- */
.header-section {
  background: linear-gradient(135deg, #3498db, #2980b9);
  padding: 10rpx 0 30rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(52, 152, 219, 0.3);
  z-index: 10;
}

.rank-title {
  text-align: center;
  color: white;
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  opacity: 0.9;
}

/* [新增] 1. 大类切换 (基础训练/拓展挑战) */
/* 样式设计：深色半透明背景，突显主分类 */
.type-switch {
  display: flex;
  width: 60%;
  margin: 0 auto 20rpx;
  background: rgba(0, 0, 0, 0.15); /* 深一点的背景，区分层级 */
  border-radius: 40rpx;
  padding: 6rpx;
}

.switch-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  padding: 12rpx 0;
  border-radius: 34rpx;
  transition: all 0.2s;
}

.switch-item.active {
  background: #fff;
  color: #3498db;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

/* [原有] 2. 榜单模式切换 (高手榜/实时榜) */
/* 样式微调：变小一点，作为二级导航 */
.mode-tabs {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.mode-item {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  padding: 0 30rpx;
  position: relative;
  transition: all 0.3s;
}

.mode-item.active {
  color: #fff;
  font-weight: bold;
  font-size: 28rpx;
}

/* 底部指示点 */
.mode-item.active::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
}

/* [新增] 提示条样式 */
.tips-box {
  background-color: #fdf6ec;
  padding: 15rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tips-box text {
  font-size: 22rpx;
  color: #e6a23c;
  text-align: center;
}

/* [原有] 3. 年级Tabs */
.grade-tabs {
  display: flex;
  justify-content: space-around;
  padding: 0 10rpx; 
  margin-top: 10rpx;
}

.grade-item {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  padding: 8rpx 18rpx; 
  border-radius: 20rpx;
  transition: all 0.2s;
  border: 1rpx solid transparent;
  white-space: nowrap; 
}

.grade-item.active {
  color: #3498db;
  background: white;
  font-weight: bold;
  transform: scale(1.05);
}

/* --- 2. 对齐核心修正区域 --- */

/* 表头样式 */
.list-header {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 15rpx; 
  font-size: 26rpx;
  color: #95a5a6;
  font-weight: bold;
  box-sizing: border-box;
}

.list-header text {
  white-space: nowrap;
}

/* 表头列宽定义 */
.list-header > text:nth-child(1) { width: 18%; text-align: center; }
.list-header > text:nth-child(2) { width: 37%; padding-left: 20rpx; box-sizing: border-box; }
.list-header > text:nth-child(3) { width: 25%; text-align: center; }
.list-header > text:nth-child(4) { width: 20%; text-align: right; padding-right: 10rpx; box-sizing: border-box;}

/* --- 3. 列表区域 --- */
.rank-list {
  flex: 1; 
  padding: 0 30rpx; 
  box-sizing: border-box;
  padding-bottom: 160rpx !important; 
}

/* 卡片样式 */
.rank-card {
  background: white;
  margin-bottom: 20rpx;
  padding: 20rpx 0; 
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 5rpx 10rpx rgba(0,0,0,0.03);
  transition: transform 0.1s;
}

.rank-card.top-card { border: 1rpx solid #fff; }
.rank-card:active { transform: scale(0.98); }

/* 下面是列表内容的列样式，必须严格对应表头宽 */
.col-rank {
  width: 18%; 
  display: flex;
  justify-content: center;
  align-items: center;
}

.col-user {
  width: 37%; 
  display: flex;
  align-items: center;
  padding-left: 10rpx; 
  box-sizing: border-box;
}

.col-score {
  width: 25%; 
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.col-time {
  width: 20%; 
  text-align: right;
  font-size: 26rpx;
  color: #95a5a6;
  font-family: 'Courier New', Courier, monospace;
  padding-right: 30rpx; 
  box-sizing: border-box;
}

/* 元素细节 */
.rank-num { font-size: 32rpx; color: #7f8c8d; font-weight: bold; font-style: italic; }
.medal { font-size: 40rpx; } 

.user-avatar {
  width: 66rpx; 
  height: 66rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background-color: #f1f2f6;
  border: 2rpx solid #eee;
  flex-shrink: 0;
}

.avatar-gold {
  border: 4rpx solid #ffd700;
  box-shadow: 0 0 10rpx rgba(255, 215, 0, 0.4);
}

.user-name {
  font-size: 26rpx;
  color: #2c3e50;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 160rpx;
}

.name-bold { font-weight: bold; color: #2c3e50; }

.score-val { font-size: 34rpx; font-weight: bold; color: #e67e22; }
.rank-card:nth-child(2) .score-val { color: #f39c12; } 
.score-unit { font-size: 20rpx; color: #bdc3c7; margin-left: 4rpx;}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
  color: #bdc3c7;
}
.empty-icon { font-size: 80rpx; margin-bottom: 20rpx; }
.empty-tip { font-size: 24rpx; color: #3498db; margin-top: 10rpx; }

/* 底部悬浮按钮栏 */
.footer-action {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); 
  box-shadow: 0 -5rpx 20rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
  z-index: 100;
}

.challenge-btn {
  background: linear-gradient(135deg, #f39c12, #d35400);
  color: white;
  border-radius: 50rpx;
  font-weight: bold;
  font-size: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(243, 156, 18, 0.4);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.challenge-btn:active {
  transform: scale(0.98);
}