/* pages/math_rank/math_rank.wxss */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* --- 1. 顶部区域 --- */
.header-section {
  background: linear-gradient(135deg, #3498db, #2980b9);
  padding: 20rpx 0 40rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(52, 152, 219, 0.3);
  z-index: 10;
}

.rank-title {
  text-align: center;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  letter-spacing: 2rpx;
}

/* 年级Tabs */
.grade-tabs {
  display: flex;
  justify-content: space-around;
  padding: 0 10rpx; /* 减小左右间距 */
}

.grade-item {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  padding: 10rpx 20rpx; 
  border-radius: 30rpx;
  transition: all 0.2s;
  border: 2rpx solid transparent;
  white-space: nowrap; /* 防止年级文字换行 */
}

.grade-item.active {
  color: #3498db;
  background: white;
  font-weight: bold;
  transform: scale(1.05);
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.2);
}

/* --- 2. 对齐核心修正区域 --- */

/* 
   关键调整：
   1. 总宽度分配：排名(18%) + 选手(37%) + 得分(25%) + 耗时(20%) = 100%
   2. 增加了排名的宽度，防止换行
*/

/* 表头样式 */
.list-header {
  display: flex;
  align-items: center;
  /* 左右内边距设为30rpx，跟下面白色卡片的边距对齐 */
  padding: 30rpx 30rpx 15rpx; 
  font-size: 26rpx;
  color: #95a5a6;
  font-weight: bold;
  box-sizing: border-box;
}

/* 强制不换行，解决截图中的“排\n名”问题 */
.list-header text {
  white-space: nowrap;
}

/* 表头列宽定义 */
.list-header > text:nth-child(1) { width: 18%; text-align: center; }
.list-header > text:nth-child(2) { width: 37%; padding-left: 20rpx; box-sizing: border-box; }
.list-header > text:nth-child(3) { width: 25%; text-align: center; }
.list-header > text:nth-child(4) { width: 20%; text-align: right; padding-right: 10rpx; box-sizing: border-box;}

/* --- 3. 列表区域 --- */
.rank-list {
  flex: 1; 
  padding: 0 30rpx; /* 列表容器的左右内边距 */
  box-sizing: border-box;
}

/* 卡片样式 */
.rank-card {
  background: white;
  margin-bottom: 20rpx;
  padding: 20rpx 0; /* 上下padding保留，左右0 */
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 5rpx 10rpx rgba(0,0,0,0.03);
  transition: transform 0.1s;
}

.rank-card.top-card { border: 1rpx solid #fff; }
.rank-card:active { transform: scale(0.98); }

/* 下面是列表内容的列样式，必须严格对应表头宽 */
.col-rank {
  width: 18%; /* 对应表头 18% */
  display: flex;
  justify-content: center;
  align-items: center;
}

.col-user {
  width: 37%; /* 对应表头 37% */
  display: flex;
  align-items: center;
  padding-left: 10rpx; 
  box-sizing: border-box;
}

.col-score {
  width: 25%; /* 对应表头 25% */
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.col-time {
  width: 20%; /* 对应表头 20% */
  text-align: right;
  font-size: 26rpx;
  color: #95a5a6;
  font-family: 'Courier New', Courier, monospace;
  padding-right: 30rpx; /* 右边距稍微大点，对应表头的对齐 */
  box-sizing: border-box;
}

/* 元素细节 */
.rank-num { font-size: 32rpx; color: #7f8c8d; font-weight: bold; font-style: italic; }
.medal { font-size: 40rpx; } /* 稍微调小奖牌，避免撑大高度 */

.user-avatar {
  width: 66rpx; /* 头像缩小，给文字留空间 */
  height: 66rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background-color: #f1f2f6;
  border: 2rpx solid #eee;
  flex-shrink: 0;
}

.avatar-gold {
  border: 4rpx solid #ffd700;
  box-shadow: 0 0 10rpx rgba(255, 215, 0, 0.4);
}

.user-name {
  font-size: 26rpx;
  color: #2c3e50;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 160rpx;
}

.name-bold { font-weight: bold; color: #2c3e50; }

.score-val { font-size: 34rpx; font-weight: bold; color: #e67e22; }
.rank-card:nth-child(2) .score-val { color: #f39c12; } 
.score-unit { font-size: 20rpx; color: #bdc3c7; margin-left: 4rpx;}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
  color: #bdc3c7;
}
.empty-icon { font-size: 80rpx; margin-bottom: 20rpx; }
.empty-tip { font-size: 24rpx; color: #3498db; margin-top: 10rpx; }