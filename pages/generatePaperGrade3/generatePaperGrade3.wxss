/* pages/generatePaperGrade3/generatePaperGrade3.wxss */

/* ===== 基础设置 ===== */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
}

/* ===== 头部样式 ===== */
.header {
  text-align: center;
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  border-radius: 16rpx;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(46, 204, 113, 0.3);
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* ===== 选项卡样式 ===== */
.tabs {
  display: flex;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: 100%;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  box-sizing: border-box;
}

.tab-item.active {
  color: #2ecc71;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #2ecc71;
  border-radius: 2rpx;
}

/* ===== 卡片通用样式 ===== */
.tab-content {
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}

.config-card,
.preview-card,
.answer-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.config-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 25rpx;
  color: #333;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* ===== 配置页面样式 ===== */
.config-group {
  margin-bottom: 25rpx;
  width: 100%;
  box-sizing: border-box;
}

.config-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
  width: 100%;
  box-sizing: border-box;
}

.config-input {
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  background: white;
}

.config-section {
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

/* ===== 题目类型样式 ===== */
.question-type {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
}

.type-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.type-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  min-width: 120rpx;
}

.type-score {
  font-size: 26rpx;
  color: #666;
  background: #e6f7ef;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.type-control {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #555;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
  gap: 15rpx;
}

.type-label {
  flex-shrink: 0;
  color: #555;
}

.count-input {
  width: 120rpx;
  height: 60rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  box-sizing: border-box;
  background: white;
  flex-shrink: 0;
}

/* ===== 统计信息 ===== */
.stats {
  background: #e6f7ef;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-top: 25rpx;
  border: 1rpx solid #b8e6cf;
  width: 100%;
  box-sizing: border-box;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.stat-item:last-child {
  margin-bottom: 0;
}

.stat-value {
  font-weight: 500;
  color: #2ecc71;
  font-size: 30rpx;
}

/* ===== 按钮样式 ===== */
.generate-btn {
  width: 100%;
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 20rpx;
  border: none;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.generate-btn.disabled {
  opacity: 0.6;
}

/* ===== 预览页面样式 ===== */
.preview-header {
  text-align: center;
  margin-bottom: 25rpx;
}

.paper-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
  word-break: break-word;
}

.paper-info {
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.questions-list {
  margin-top: 15rpx;
  width: 100%;
}

.question-item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.question-item:last-child {
  border-bottom: none;
}

.question-content {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  width: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.question-index {
  font-size: 30rpx;
  color: #333;
  min-width: 50rpx;
  font-weight: 500;
  margin-right: 10rpx;
}

.question-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
  min-width: 0;
  word-break: break-word;
  padding-right: 15rpx;
}

.question-score {
  font-size: 26rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.question-category {
  font-size: 24rpx;
  color: #2ecc71;
  background: #e6f7ef;
  padding: 6rpx 15rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* ===== 分数显示样式 ===== */
.fraction-question {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
  flex-wrap: wrap;
}

.fraction-display {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin: 0 5rpx;
}

.fraction-num {
  font-size: 28rpx;
  line-height: 1.2;
  padding: 0 8rpx;
  text-align: center;
  font-weight: 500;
}

.fraction-line {
  width: 100%;
  height: 2rpx;
  background-color: #333;
  margin: 4rpx 0;
}

.fraction-den {
  font-size: 28rpx;
  line-height: 1.2;
  padding: 0 8rpx;
  text-align: center;
  font-weight: 500;
}

.fraction-operator {
  font-size: 30rpx;
  margin: 0 10rpx;
  color: #333;
  font-weight: 500;
}

/* ===== 答案输入区域 ===== */
.answer-inputs {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: 100%;
  box-sizing: border-box;
}

.answer-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.answers-list {
  margin-top: 15rpx;
  width: 100%;
}

.answer-item {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  width: 100%;
  box-sizing: border-box;
}

.answer-index {
  font-size: 30rpx;
  color: #333;
  min-width: 50rpx;
  font-weight: 500;
  margin-right: 10rpx;
}

.answer-input {
  flex: 1;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  min-width: 0;
  box-sizing: border-box;
}

/* ===== 答案页面样式 ===== */
.score-display {
  text-align: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  border-radius: 16rpx;
  color: white;
  margin-bottom: 25rpx;
  width: 100%;
  box-sizing: border-box;
}

.score-value {
  font-size: 70rpx;
  font-weight: bold;
  margin: 15rpx 0;
}

.score-detail {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.answer-detail {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.answer-detail:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.answer-question {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.answer-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  min-width: 0;
  word-break: break-word;
  padding-right: 15rpx;
}

.answer-info {
  padding-left: 50rpx;
  width: 100%;
  box-sizing: border-box;
}

.user-answer {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  padding: 12rpx 15rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
  word-break: break-word;
}

.user-answer.correct {
  color: #52c41a;
  background: #f6ffed;
  border-color: #b7eb8f;
}

.user-answer.wrong {
  color: #f5222d;
  background: #fff1f0;
  border-color: #ffa39e;
}

.correct-answer {
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 15rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 1rpx solid #d9d9d9;
  word-break: break-word;
}

/* ===== 空状态 ===== */
.empty-state {
  text-align: center;
  padding: 80rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 25rpx;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  color: white;
  border-radius: 10rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  width: 200rpx;
  border: none;
}

/* ===== 操作按钮组 ===== */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 25rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  border: 1rpx solid #2ecc71;
  border-radius: 10rpx;
  color: #2ecc71;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 78rpx;
  background: white;
  box-sizing: border-box;
}

.action-btn.primary {
  background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
  color: white;
  border: none;
}

/* ===== 响应式调整 ===== */
@media screen and (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .header {
    padding: 25rpx 15rpx;
  }
  
  .title {
    font-size: 32rpx;
  }
  
  .subtitle {
    font-size: 24rpx;
  }
  
  .config-card,
  .preview-card,
  .answer-card {
    padding: 25rpx 20rpx;
  }
  
  .config-title {
    font-size: 30rpx;
  }
  
  .question-content {
    flex-wrap: wrap;
    gap: 10rpx;
  }
  
  .question-text {
    order: 1;
    width: 100%;
    margin-top: 10rpx;
  }
  
  .question-score {
    order: 2;
  }
  
  .fraction-question {
    order: 1;
    width: 100%;
    margin-top: 10rpx;
  }
  
  .type-control {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
}