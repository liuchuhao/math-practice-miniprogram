/* 全局容器 */
.container {
  min-height: 100vh;
  padding: 40rpx 30rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* =================================
   1. [新增] 顶部 Hero Banner
   ================================= */
   .hero-banner {
    height: 200rpx; /* 设定高度，填补上半部分 */
    background: linear-gradient(120deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%); /* 粉色系渐变 */
    border-radius: 40rpx;
    padding: 50rpx 40rpx;
    margin-bottom: 50rpx; /* 与下方拉开距离 */
    box-shadow: 0 15rpx 30rpx rgba(255, 154, 158, 0.3);
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
  }
  
  .hero-title {
    font-size: 56rpx;
    font-weight: 900;
    color: white;
    margin-bottom: 15rpx;
    text-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
    letter-spacing: 2rpx;
  }
  
  .hero-subtitle {
    font-size: 28rpx;
    color: rgba(255,255,255,0.95);
    margin-bottom: 30rpx;
    font-weight: 500;
  }
  
  .hero-tag {
    background: rgba(255,255,255,0.25);
    color: white;
    font-size: 22rpx;
    padding: 8rpx 20rpx;
    border-radius: 30rpx;
    align-self: flex-start; /* 左对齐 */
    font-weight: bold;
    backdrop-filter: blur(10px);
  }
  
  .hero-decoration {
    position: absolute;
    right: -20rpx;
    bottom: -40rpx;
    font-size: 260rpx; /* 超大 Emoji */
    opacity: 0.2;
    transform: rotate(-15deg);
    z-index: 1;
  }
/* 2. 年级选择网格 */
.section-title {
  font-size: 32rpx;
  font-weight: 800;
  color: #34495e;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
  letter-spacing: 2rpx;
}

.grade-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  width: 100%;
  padding-bottom: 280rpx; /* 留出底部空间 */
}

.grade-card {
  height: 180rpx;
  width: 100%;
  border-radius: 35rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.06);
  background: white;
  
  /* [关键] 加上过渡动画，让边框和背景变化丝滑 */
  transition: all 0.2s ease-in-out;
  border: 4rpx solid transparent; 
}

/* 点击时的缩放效果 */
.grade-card:active { transform: scale(0.98); }

.grade-card.active {
  border-color: #ff9a9e;
  background: #fff0f6;
  box-shadow: 0 10rpx 25rpx rgba(255, 154, 158, 0.25);
  /* 移除 translateY，防止微小的位置跳动 */
}

/* [修改] 对勾样式：默认透明，不移除DOM */
.check-mark {
  position: absolute;
  top: 15rpx; right: 20rpx;
  color: #ff9a9e;
  font-weight: bold;
  font-size: 32rpx;
  
  opacity: 0; /* 默认不可见 */
  transform: scale(0.5); /* 默认缩小 */
  transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275); /* 弹性动画 */
}

/* [修改] 激活时可见 */
.check-mark.visible {
  opacity: 1;
  transform: scale(1);
}

.grade-num { 
  font-size: 70rpx; 
  font-weight: 900; 
  line-height: 1; 
  margin-bottom: 10rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.grade-text { 
  font-size: 26rpx; 
  font-weight: bold; 
  color: #7f8c8d; 
}

/* 年级颜色 */
.grade-1 .grade-num { color: #ff6b6b; }
.grade-2 .grade-num { color: #feca57; }
.grade-3 .grade-num { color: #48dbfb; }
.grade-4 .grade-num { color: #ff9ff3; }
.grade-5 .grade-num { color: #54a0ff; }
.grade-6 .grade-num { color: #1dd1a1; }


/* 3. 底部模式面板 (完全修复闪烁) */
.mode-panel {
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 30rpx 60rpx;
  
  /* 固定定位 */
  position: fixed;
  bottom: 0; left: 0; width: 100%;
  box-sizing: border-box;
  box-shadow: 0 -10rpx 40rpx rgba(0,0,0,0.08);
  
  /* 默认移出屏幕 */
  transform: translateY(100%);
  
  /* [关键] 必须加 transition */
  transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  z-index: 999;
  
  /* 确保它在视觉上覆盖其他内容 */
  visibility: visible; 
}

.mode-panel.show {
  transform: translateY(0);
}

/* ... 内部按钮样式保持不变 ... */
.mode-title { text-align: center; font-size: 30rpx; font-weight: bold; color: #2c3e50; margin-bottom: 30rpx; }
.mode-list { display: flex; gap: 30rpx; }
.mode-btn { flex: 1; height: 140rpx; border-radius: 24rpx; display: flex; align-items: center; padding: 0 30rpx; position: relative; overflow: hidden; }
.mode-btn.normal { background: linear-gradient(135deg, #a8e6cf 0%, #3b8d99 100%); }
.mode-btn.endless { background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #feada6 100%); }
.mode-icon { font-size: 50rpx; margin-right: 20rpx; }
.mode-info { display: flex; flex-direction: column; color: white; }
.m-name { font-size: 30rpx; font-weight: 800; }
.m-desc { font-size: 22rpx; opacity: 0.9; }