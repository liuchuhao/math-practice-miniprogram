/* pages/result/result.wxss */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  height: 100%;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  /* >>> 核心修改：让内容垂直居中，消除中间的大空白 <<< */
  justify-content: center; 
  align-items: center;
  box-sizing: border-box;
  /* 即使居中，底部也留一点安全距离，防止小屏手机贴底 */
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 1. 成绩卡片 */
.result-card {
  background: white;
  border-radius: 30rpx;
  box-shadow: 0 20rpx 50rpx rgba(0,0,0,0.08); /* 加深阴影，增加悬浮感 */
  overflow: hidden;
  /* 去掉之前的 margin-top，因为现在是居中布局 */
  margin-top: 0; 
  animation: popIn 0.6s cubic-bezier(0.19, 1, 0.22, 1); /* 更Q弹的动画 */
  flex-shrink: 0;
  width: 100%;
}

@keyframes popIn {
  from { transform: scale(0.9) translateY(30rpx); opacity: 0; }
  to { transform: scale(1) translateY(0); opacity: 1; }
}

.card-header {
  background: #f8f9fa;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}

.grade-tag {
  background: #e3f2fd;
  color: #3498db;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.date { font-size: 22rpx; color: #bdc3c7; }

/* 分数区 */
.score-section {
  padding: 40rpx 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-circle {
  width: 160rpx; /* 保持紧凑尺寸 */
  height: 160rpx;
  border-radius: 50%;
  border: 10rpx solid #3498db;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 30rpx rgba(52, 152, 219, 0.15);
  margin-bottom: 20rpx;
  background: white;
}

.score-num { font-size: 64rpx; font-weight: bold; color: #2c3e50; line-height: 1; }
.score-label { font-size: 18rpx; color: #95a5a6; margin-top: 6rpx; }
.cheer-text { font-size: 32rpx; font-weight: bold; color: #f39c12; letter-spacing: 2rpx; }

/* 数据网格 */
.stats-grid { display: flex; border-top: 2rpx solid #f8f9fa; }
.stat-item { flex: 1; text-align: center; padding: 20rpx 0; border-right: 2rpx solid #f8f9fa; }
.stat-item:last-child { border-right: none; }
.stat-val { display: block; font-size: 28rpx; font-weight: bold; color: #2c3e50; margin-bottom: 4rpx; }
.stat-val.wrong { color: #e74c3c; }
.stat-val.time { font-family: 'Courier New', monospace; font-size: 24rpx; }
.stat-key { font-size: 22rpx; color: #bdc3c7; }

/* 2. 上传提示 */
.upload-status {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  gap: 10rpx;
  flex-shrink: 0;
}
.upload-status text { font-size: 24rpx; color: #2ecc71; font-weight: 500; }

/* 3. 按钮组布局 */
.action-box {
  /* 增加顶部间距，让按钮组和卡片分开一点，视觉上更平衡 */
  margin-top: 60rpx; 
  display: flex;
  flex-direction: column;
  gap: 25rpx;
  flex-shrink: 0;
  width: 100%;
}

/* 第一行：两个大按钮 */
.primary-btns {
  display: flex;
  justify-content: space-between;
  gap: 25rpx;
  width: 100%;
}

.btn {
  border: none;
  border-radius: 40rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.1s;
  margin: 0; padding: 0;
}
.btn::after { border: none; }
.btn:active { transform: scale(0.96); }

/* 查看榜单 */
.rank-btn {
  flex: 1;
  height: 90rpx; /* 稍微加高一点，更显眼 */
  background: linear-gradient(135deg, #f39c12, #d35400);
  color: white;
  font-size: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(243, 156, 18, 0.3);
}

/* 分享按钮 */
.share-btn {
  flex: 1;
  height: 90rpx;
  background: linear-gradient(135deg, #2ecc71, #27ae60);
  color: white;
  font-size: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(46, 204, 113, 0.3);
}

/* 第二行：三个小按钮 */
.secondary-btns {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  width: 100%;
}

.nav-btn {
  flex: 1;
  height: 80rpx;
  background: white;
  color: #7f8c8d;
  font-size: 26rpx;
  border: 1rpx solid #e0e0e0;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
  white-space: nowrap; 
}