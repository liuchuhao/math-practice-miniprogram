/* 页面容器 */
.container {
  padding: 20rpx;
  background: linear-gradient(180deg, #f0f4ff 0%, #f5f5f5 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.header-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 快捷入口 */
.quick-entry {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
}

.quick-label {
  font-size: 26rpx;
  color: #666;
}

.quick-btn {
  margin-left: 15rpx;
  padding: 10rpx 25rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20rpx;
  font-size: 26rpx;
}

/* 年级列表 */
.grade-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.grade-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  transition: all 0.2s ease;
}

.grade-item:last-child {
  border-bottom: none;
}

.grade-item:active {
  background-color: #f8f9ff;
  transform: scale(0.98);
}

/* 年级图标 - 数字样式 */
.grade-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
  flex-shrink: 0;
}

.grade-num {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

/* 不同年级的不同颜色 */
.grade-item:nth-child(1) .grade-icon {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
}

.grade-item:nth-child(2) .grade-icon {
  background: linear-gradient(135deg, #ff9f43, #ff9f1a);
}

.grade-item:nth-child(3) .grade-icon {
  background: linear-gradient(135deg, #2ecc71, #27ae60);
}

.grade-item:nth-child(4) .grade-icon {
  background: linear-gradient(135deg, #54a0ff, #2e86de);
}

.grade-item:nth-child(5) .grade-icon {
  background: linear-gradient(135deg, #9b59b6, #8e44ad);
}

.grade-item:nth-child(6) .grade-icon {
  background: linear-gradient(135deg, #00d2d3, #1dd1a1);
}

.grade-info {
  flex: 1;
  overflow: hidden;
}

.grade-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.grade-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.grade-difficulty {
  margin-left: 15rpx;
  font-size: 22rpx;
}

.grade-desc {
  display: block;
  font-size: 24rpx;
  color: #888;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

/* 题型标签 */
.topic-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.topic-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f0f4ff;
  color: #667eea;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.grade-arrow {
  margin-left: 15rpx;
  flex-shrink: 0;
}

.arrow-icon {
  font-size: 48rpx;
  color: #ccc;
  font-weight: 300;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 30rpx;
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #eee;
}

/* 底部提示 */
.footer {
  margin-top: 30rpx;
  text-align: center;
  padding: 25rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.grade-item {
  animation: fadeIn 0.3s ease forwards;
}

.grade-item:nth-child(1) { animation-delay: 0.05s; }
.grade-item:nth-child(2) { animation-delay: 0.1s; }
.grade-item:nth-child(3) { animation-delay: 0.15s; }
.grade-item:nth-child(4) { animation-delay: 0.2s; }
.grade-item:nth-child(5) { animation-delay: 0.25s; }
.grade-item:nth-child(6) { animation-delay: 0.3s; }